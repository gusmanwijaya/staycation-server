<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Data Booking</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Date</th>
            <th>Title</th>
            <th>Member Name</th>
            <th>Bank Name</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for( let index = 0; index < booking.length; index++ ) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <%= booking[index].bookingStartDate.toLocaleString().split(",")[0]
              %> s/d <%=
              booking[index].bookingEndDate.toLocaleString().split(",")[0] %>
            </td>
            <td><%= booking[index].itemId.title %></td>
            <td>
              <%= booking[index].memberId.firstName %> <%=
              booking[index].memberId.lastName %>
            </td>
            <td><%= booking[index].bankId.bankName %></td>
            <td><%= booking[index].payments.status %></td>
            <td>
              <a
                href="/booking/<%= booking[index]._id %>"
                class="btn btn-success btn-sm mr-1"
                ><i class="fas fa-eye"></i
              ></a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
