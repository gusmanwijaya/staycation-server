<div
  class="tab-pane fade show active"
  id="show-image"
  role="tabpanel"
  aria-labelledby="show-tab"
>
  <!-- DataTales Example -->
  <div class="row">
    <% for( let index = 0; index < item.imageId.length; index++ ) { %>
    <div class="col-md-4">
      <div class="card shadow mb-4 mt-2">
        <div class="card-body">
          <img
            src="http://localhost:3001/uploads/<%= item.imageId[index].imageUrl %>"
            alt="Image"
            style="width: 100%; display: block"
          />
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <a href="/item" class="btn btn-primary">Back</a>
</div>
