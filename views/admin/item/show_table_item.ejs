<div
  class="tab-pane fade show active"
  id="show"
  role="tabpanel"
  aria-labelledby="show-tab"
>
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Data Item</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>No</th>
              <th>Title</th>
              <th>Price</th>
              <th>Country</th>
              <th>City</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for( let index = 0; index < item.length; index++ ) { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item[index].title %></td>
              <td><%= item[index].price %></td>
              <td><%= item[index].country %></td>
              <td><%= item[index].city %></td>
              <td>
                <div class="row" style="padding-left: 6px">
                  <a
                    href="/item/show-image/<%= item[index]._id %>"
                    class="btn btn-info btn-sm mr-1"
                    ><i class="fas fa-image"></i
                  ></a>
                  <a
                    href="/item/edit/<%= item[index]._id %>"
                    class="btn btn-warning btn-sm mr-1"
                  >
                    <i class="fas fa-pencil-alt"></i>
                  </a>
                  <form
                    action="/item/destroy/<%= item[index]._id %>?_method=DELETE"
                    method="POST"
                    class="mr-1"
                  >
                    <button class="btn btn-danger btn-sm">
                      <i class="fas fa-trash"></i>
                    </button>
                  </form>
                  <a
                    href="/item/show-detail-item/<%= item[index]._id %>"
                    class="btn btn-success btn-sm"
                    ><i class="fas fa-plus"></i
                  ></a>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
