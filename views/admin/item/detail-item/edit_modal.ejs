<!-- Modal -->
<div
  class="modal fade"
  id="editModal"
  tabindex="-1"
  aria-labelledby="editModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Feature</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form
        action="/item/show-detail-item/<%= itemId %>/update-feature?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="modal-body">
          <div class="form-group">
            <label for="nameInModal">Name</label>
            <input
              type="text"
              class="form-control"
              id="nameInModal"
              name="nameInModal"
              required
            />
          </div>
          <div class="form-group">
            <label for="qtyInModal">Quantity</label>
            <input
              type="number"
              class="form-control"
              id="qtyInModal"
              name="qtyInModal"
              required
            />
          </div>
          <div class="form-group">
            <label for="imageUrlInModal">Upload Image</label>
            <input
              type="file"
              class="form-control"
              id="imageUrlInModal"
              name="imageUrlInModal"
              accept="image/*"
            />
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" id="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
