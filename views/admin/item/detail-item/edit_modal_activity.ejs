<!-- Modal -->
<div
  class="modal fade"
  id="editModalActivity"
  tabindex="-1"
  aria-labelledby="editModalActivityLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Activity</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form
        action="/item/show-detail-item/<%= itemId %>/update-activity?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="modal-body">
          <div class="form-group">
            <label for="nameInModalActivity">Name</label>
            <input
              type="text"
              class="form-control"
              id="nameInModalActivity"
              name="nameInModalActivity"
              required
            />
          </div>
          <div class="form-group">
            <label for="typeInModalActivity">Type</label>
            <input
              type="text"
              class="form-control"
              id="typeInModalActivity"
              name="typeInModalActivity"
              required
            />
          </div>
          <div class="form-group">
            <label for="imageUrlInModalActivity">Upload Image</label>
            <input
              type="file"
              class="form-control"
              id="imageUrlInModalActivity"
              name="imageUrlInModalActivity"
              accept="image/*"
            />
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" id="idActivity" name="idActivity" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
