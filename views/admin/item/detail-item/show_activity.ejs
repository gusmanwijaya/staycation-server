<div
  class="tab-pane fade"
  id="show-activity"
  role="tabpanel"
  aria-labelledby="show-tab"
>
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Data Activity</h6>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/item/store/activity"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                required
              />
            </div>
            <div class="form-group">
              <label for="type">Type</label>
              <input
                type="text"
                class="form-control"
                id="type"
                name="type"
                required
              />
            </div>
            <div class="form-group">
              <label for="imageUrl">Upload Image</label>
              <input
                type="file"
                class="form-control"
                id="imageUrl"
                name="imageUrl"
                accept="image/*"
                required
              />
            </div>
            <input
              type="hidden"
              name="itemId"
              id="itemId"
              value="<%= itemId %>"
            />
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for( let index = 0; index < activities.length; index++ ) { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= activities[index].name %></td>
                  <td><%= activities[index].type %></td>
                  <td>
                    <img
                      src="http://localhost:3001/uploads/<%= activities[index].imageUrl %>"
                      alt="Activity"
                      style="width: 30px"
                    />
                  </td>
                  <td>
                    <div class="row" style="padding-left: 6px">
                      <button
                        data-toggle="modal"
                        data-target="#editModalActivity"
                        id="btnEditModalActivity"
                        type="button"
                        class="btn btn-warning btn-sm mr-1"
                        data-id="<%= activities[index]._id %>"
                        data-name="<%= activities[index].name %>"
                        data-type="<%= activities[index].type %>"
                      >
                        <i class="fas fa-pencil-alt"></i>
                      </button>
                      <form
                        action="/item/show-detail-item/<%= itemId %>/destroy-activity/<%= activities[index]._id %>?_method=DELETE"
                        method="POST"
                      >
                        <button class="btn btn-danger btn-sm">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
