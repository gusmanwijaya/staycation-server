<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../partials/header.ejs %>
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <% include ../../partials/sidebar.ejs %>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <% include ../../partials/navbar.ejs %>

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <% include ../../partials/validation.ejs %>

            <!-- Page Heading -->
            <h1 class="h3 mb-4 text-gray-800">Item</h1>

            <% if (action == "view") { %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <button
                  class="nav-link active"
                  id="show-tab"
                  data-toggle="tab"
                  data-target="#show"
                  type="button"
                  role="tab"
                  aria-controls="show"
                  aria-selected="true"
                >
                  Show
                </button>
              </li>
              <li class="nav-item" role="presentation">
                <button
                  class="nav-link"
                  id="add-tab"
                  data-toggle="tab"
                  data-target="#add"
                  type="button"
                  role="tab"
                  aria-controls="add"
                  aria-selected="false"
                >
                  Add
                </button>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <% include ./show_table_item.ejs %> <% include ./add_item.ejs %>
            </div>

            <% } %> <% if (action == "show image") { %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <button
                  class="nav-link active"
                  id="show-tab"
                  data-toggle="tab"
                  data-target="#show-image"
                  type="button"
                  role="tab"
                  aria-controls="show"
                  aria-selected="true"
                >
                  Show Image
                </button>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <% include ./show_image_item.ejs %>
            </div>
            <% } %>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <% include ../../partials/footer.ejs %>
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <% include ../../partials/logoutModal.ejs %> <% include
    ../../partials/script.ejs %>

    <script>
      ClassicEditor.create(document.querySelector("#description")).catch(
        (error) => {
          console.error(error);
        }
      );
    </script>
  </body>
</html>
